{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/api/main/*"],
      "@utils/*": ["src/api/util/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
