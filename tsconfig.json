{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@bootstrap/*": ["src/api/bootstrap/*"],
      "@utils/*": ["src/api/utils/*"],
      "@presentation/*": ["src/api/presentation/*"],
      "@services/*": ["src/api/services/*"],
      "@infra/*": ["src/api/infra/*"],
      "@config/*": ["src/api/config/*"],
      "@domain/*": ["src/api/domain/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
